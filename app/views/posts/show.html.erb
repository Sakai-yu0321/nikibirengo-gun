<div class="post_show_container">
  <div class="post_show_items">

    <div class="post_show_title">
      <h1>title</h1>
      <em><b><%= @post.title %></b></em>
    </div>

    <% if @post.image.attached? %>
      <%= image_tag @post.image, class:"post_show_image"%>
    <% end %> 

    <div class="post_show_text">
      <%= @post.text %>
    </div>
   
    <div class="edit_or_like">
      <% if user_signed_in? && @post.user_id == current_user.id %>
        <%= link_to(edit_post_path(@post.id), class:"post_edit_btn") do %>
          <i class="fa fa-edit"></i>Edit
        <% end %>
      <% end %>
      <%= link_to(post_path(@post.id), class:"join_post_in_favorite") do %>
        <i class="fa fa-heart"></i>like
      <% end %>
    </div>
    
      <%# <%= link_to "前の投稿に戻る", "/posts/#{@post.previous.id}/previous", class:"choice previous_post" %>
      <%# <%= link_to "次の投稿へ進む", "/posts/#{@post.id}/next", class:" choice next_post" %>

    <p class="comment_to_post"><i class="fa fa-comments"></i>comments</p>

    <div class="comments_container">
      <div class="comment_items">
        <div class="comments_index">
          <%#  ここにコメントを一覧表示 %>
        </div>
      </div>
    </div>

    <div class="comment_input_form">
      ここでコメントを入力する
    </div>

    <div class="move_other_container">
      <% if user_signed_in? && @post.user_id == current_user.id %>
        <%= link_to(user_path(@post.user.id), class:"post_show_to_my_page") do %>
          <i class="fa fa-user-o"></i>マイページ
        <% end %>
      <% end %>
    
      <div class="post_show_to_root_path">
        <%= render "shared/move_root_path"%>
      </div>  
    </div>
  </div>
</div>