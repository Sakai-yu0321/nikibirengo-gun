<div class="sign_up_form">

  <div class="sign_up_title">
    <h2>Login to your account</h2>
  </div>

  <%= form_with model: @user, url: user_session_path, class: 'account_create', local: true do |f| %>
    <div class="field">
      <%= f.label :email, "email", class: "form_label" %><br />
      <%= f.email_field :email, class:"input_default", autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :password, "password", class: "form_label" %><br />
      <%= f.password_field :password, class:"input_default", autocomplete: "current-password" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "remember_me_check_box" %>
        <%= f.label :remember_me, class: "remember_me" %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "Log in", class: "sign_up_submit" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
