<%= render "/home/title"%>
<div class="sign_up_page">

  <div class="sign_up_form">

    <div class="sign_up_title">
      <h2>アカウント作っちゃう？</h2>
    </div>

    <%= form_with model: @user, url: user_registration_path, class: 'account_create', local: true do |f| %>


      <div class="field">
        <%= f.label :nickname, "ニックネーム", class: "form_label" %><br />
        <%= f.text_field :nickname, class:"input_default", autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "form_label" %><br />
        <%= f.email_field :email, class:"input_default", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "form_label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上にしてね)</em>
        <% end %><br />
        <%= f.password_field :password, class:"input_default", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再確認", class: "form_label" %><br />
        <%= f.password_field :password_confirmation, class:"input_default", autocomplete: "new-password" %>
      </div>

      <%= render 'devise/shared/error_messages', model: f.object %>
      
      <div class="actions">
        <%= f.submit "作る", class: "sign_up_submit" %>
      </div>
    <% end %>

    <div class="moving_to_login_form">
      <%= render "devise/shared/links" %>
    </div>
  </div>

    <img src="<%= "/images/ニキビちゃんコメント.jpg" %>", class="nikibityan_comment">

  <div class="sign_up_to_root_path">
    <%= render "shared/move_root_path" %>
  </div>
</div>