<!DOCTYPE html>
<html>
  <head>
    <title>nikibirengo-gun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/4f9b7114cd.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if notice %>
      <div id="flash_notice">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div id="flash_alert">
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
