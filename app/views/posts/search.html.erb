<div class="search_posts_title">投稿検索</div>

<div class="searched_post_to_top">
  <%= render "shared/move_root_path" %> 
</div>

<%= form_with url: search_posts_path, local: true, method: :get, class: "search_form2" do |f| %>
  <%= f.text_field :keyword, placeholder: "投稿を検索する", class: "search_input" %>
  <%= f.button :type => "submit", style: 'border-style: none;', class:"search_btn" do %>
    <i class="fa fa-search"></i>
  <% end %>
<% end %>

<% if @posts != [] %>
<div class="searched_posts">
  <% @posts.each do |post| %>
    <%= link_to post_path(post.id), class:"search_post_content" do %>

      <div class="post_title">
        title: <%= post.title %>
      </div>

      <div class="post_category">
        <div>category: </div><%= post.category.name %>
      </div>

      <div class="post_text">
        <%= post.text %>
      </div>

      <div class="post_created_at">
        <%= l post.created_at %>
        <div class="like_and_edit">
          <% if user_signed_in? %>
            <div class="heart_btn">
              <%= render partial: 'like_btn'%>
            </div>
            <% if post.user_id == current_user.id %>
              <%= link_to(edit_post_path(post.id), class:"post_edit_btn") do %>
                <i class="fa fa-edit"></i>Edit
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

    <% end %>
  <% end %>
</div>
<% else %>
  <div class="no_post">検索結果なし</div>
<% end %>

